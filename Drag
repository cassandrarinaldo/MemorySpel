using System;
using System.Security.Cryptography.X509Certificates;

namespace OOP1_Projekt
{
    class Drag : SpelPlan
    {
        IBricka[] BrickArray;
        string[] SymbolArray;
        int drag1, drag2;
        public Drag() 
        {
            BrickArray = new GörArray().ArraySpelplan;
            CreateStringArray(BrickArray);
        }
        public void FörstaDraget()
        {
            base.Print();
            Console.WriteLine("Ange vilken första bricka du vill vända på!");
            drag1 = Convert.ToInt32(Console.ReadLine())-1;
            Console.Clear();
            base.changeToSymbol(drag1);
            base.Print();
            AndraDraget();
        }
        public void AndraDraget()
        {
            Console.WriteLine("Ange den andra brickan du vill vända på!");
            drag2 = Convert.ToInt32(Console.ReadLine())-1;
            Console.Clear();
            if (drag2 == drag1)
            {
                Console.WriteLine("Vänligen ange en annan bricka!");
                AndraDraget();
            }
            base.changeToSymbol(drag2);
            base.Print();
            if (base.printArray[drag1] == base.printArray[drag2])
            {
                base.printArray[drag1] = "0";
                base.printArray[drag2] = "0";
                Console.WriteLine("De var lika!");
            }
            else
            {
                Console.WriteLine("De matchade inte!");
                base.changeToIndex(drag1);
                base.changeToIndex(drag2);
            }
            Console.ReadLine();
            Console.Clear();
        }
        public void Game()
        {
            for (int i = 0; i < base.printArray.Length; i++)
            {
                while (printArray[i] != "0")
                {
                    FörstaDraget();
                }
            }
        }
    }
}

