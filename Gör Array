using System;
using static System.Runtime.InteropServices.JavaScript.JSType;

namespace Memory_game
{
	public class ValInförSpel
	{
		public IBricka[] arraySpelplan { get; private set; } = new IBricka[12];
		public ValInförSpel()
		{
			Console.WriteLine("Hur vill du att brickorna på spelplanen ska se ut? Välj ett alternativ:\nTryck 1 för att spela på en förutbestämd spelplan\nTryck 2 för att välja egna djur på brickorna\nTryck 3 för att välja egna symboler på brickorna");
			int input = Convert.ToInt32(Console.ReadLine());
			switch (input)
			{
				case 1:
					GörArray(new IBricka[12] { new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus(), new BrickaPlus()});
					break;
				case 2:
					Console.WriteLine("Ange 6st olika djur, ange mellanslag mellan orden.");
					string[] arrayInputOne = Console.ReadLine().Split();
					GörArray(arrayInputOne);
					break;
				case 3:
					Console.WriteLine("Ange 6st olika symboler, ange mellanslag mellan symbolerna.");
                    string[] arrayInputTwo = Console.ReadLine().Split();
                    GörArray(arrayInputTwo);
                    break;
            }
		}
		public int RandomNumber()
		{
            Random random = new Random();
            int number = random.Next(0, 11);
			return number;
        }

		public void GörArray(IBricka[] objektArray)
		{
            for (int i = 0; i < objektArray.Length; i++)
            {
                int number = RandomNumber();
                if (this.arraySpelplan[number] == null)
                {
                    this.arraySpelplan[number] = objektArray[i];
                }
                else
                {
                    i--;
                }
            }
        }
        public void GörArray(string[] array)
        {
            for (int i = 0; i < 12; i++)
            {
                if (i < array.Length)
                {
                    int number = RandomNumber();
                    if (this.arraySpelplan[number] == null)
                    {
                        this.arraySpelplan[number] = new BrickaValfri(array[i]);
                    }
                    else
                    {
                        i--;
                    }
                }
                else
                {
                    int number = RandomNumber();
                    if (this.arraySpelplan[number] == null)
                    {
                        this.arraySpelplan[number] = new BrickaValfri(array[i-array.Length]);
                    }
                    else
                    {
                        i--;
                    }
                }
            }
        }
    }
}

